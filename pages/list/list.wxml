<!--pages/list/list.wxml-->
<view class='list-contenter'>
  <scroll-view class='list-wrap1' scroll-into-view="{{scrollView}}" scroll-y="true">
  <view id="{{item}}" bindtap='scrollhandle' class='view-item' style='background-color:{{item}}'  wx:key="{{*this}}" wx:for="{{listcolor}}">上下滑动</view>
  </scroll-view>

   <scroll-view class='list-wrap2' scroll-x="true">
  <view class='view-item' bindtap='clickhandle' style='background-color:{{item}}'  wx:key="{{*this}}" wx:for="{{listcolor}}">左右滑动</view>
  </scroll-view> 
</view>

