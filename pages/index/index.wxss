/**index.wxss**/
.container-index{
  position: relative;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 100rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.userinfo-address{
  margin:40rpx auto;
  color: red;
}
.dl-left{
  position: absolute;
  left: 10rpx;
  top:10rpx;
  width:200rpx;
  height:533rpx;
 overflow: hidden;
 animation: move 2s forwards;
}
 .dl-left-long{
width:200rpx;
  height: 600rpx;
}
.dl-right{
  position: absolute;
 right:10rpx;
 top:10rpx;
  width:200rpx;
  height:533rpx;
 overflow: hidden;
 animation: move 2s forwards;
}
 .dl-left-short{
  width:200rpx;
  height:150rpx;
  position: absolute;
  left: 0;
  top:475rpx;
animation: shortMove 2s forwards;
}
@keyframes shortMove{
  0% { top: 76rpx; } 
 70% { top: 475rpx; } 
 85% { top: 450rpx; } 
 100% { top: 475rpx; } 
}
@keyframes move{
  0% { height: 119rpx; } 
 70% { height: 533rpx; } 
 85% { height: 520rpx; } 
 100% { height: 533rpx; }
}